{
  "name": "@devnetic/kiirus-db",
  "version": "1.0.0",
  "description": "A document-oriented NoSQL database, written entirely in JavaScript. ",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "npm run clean && tsc",
    "compile:watch": "npm run compile -- -w",
    "coverage": "nyc ava",
    "lint": "ts-standard",
    "lint:ts": "eslint . --ext .ts",
    "lint:fix": "ts-standard --fix",
    "posttest": "npm run lint",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run lint && npm run coverage",
    "pretest": "npm run compile",
    "release": "standard-version",
    "start": "node lib/index.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "ts-standard": {
    "ignore": [
      "lib",
      "examples"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devnetic/kiirus-db.git"
  },
  "keywords": [
    "nosql",
    "database",
    "document-oriented",
    "storage",
    "portable",
    "db"
  ],
  "author": "Álvaro José Agámez Licha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devnetic/kiirus-db/issues"
  },
  "homepage": "https://github.com/devnetic/kiirus-db#readme",
  "dependencies": {
    "@devnetic/load-env": "^1.1.0",
    "@devnetic/utils": "^2.1.0",
    "fastify": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/format": "^17.0.0",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "ava": "^4.3.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gts": "^3.1.1",
    "husky": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "snazzy": "^9.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.0",
    "typescript": "^4.8.4"
  }
}
