{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib/types",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016"
    ],
    "module": "commonjs",
    // "moduleResolution": "node",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "./node_modules"
  ]
}
